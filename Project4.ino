void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600*2);
  attachInterrupt(digitalPinToInterrupt(dpin2), WaveGenerator, RISING); 
  pinMode(red,OUTPUT);
  pinMode(yellow,OUTPUT);
  pinMode(green,OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  Frequency();
  for (i = 0; i < maxSamplesNum; i++){
    Serial.println(Signal[type][i]); 
    delay(freq);

  }
  
}

void Frequency(){
  int value_j = analogRead(joystick_x); 

  if(  (value_j >= 200) && (value_j <= 800) ) {
    freq = 30;
    }
    
  if(  (value_j >= 0) && (value_j < 200) ) {
  freq = freq + 10;
  
  if (freq >= 50){  // Speed limit
    freq = maxim;
  }
  delay(freq);
  }
  
  if(  (value_j > 800) && (value_j <= 1023) ) {
  freq = freq - 10;
  if (freq <= 10){      // Speed limit
    freq = minim;
  }
  delay(freq);
  } 
}

